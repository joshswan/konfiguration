{
  "name": "konfiguration",
  "version": "1.1.2",
  "description": "Create config from config files and environment variables",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "config",
    "configuration",
    "env",
    "environment",
    "merge"
  ],
  "author": "Josh Swan <josh@disruptivelabs.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshswan/konfiguration"
  },
  "bugs": {
    "url": "https://github.com/joshswan/konfiguration/issues"
  },
  "homepage": "https://github.com/joshswan/konfiguration#readme",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint src --ext .js,.ts && tsc --noEmit",
    "prepublishOnly": "rimraf dist && yarn run build",
    "test": "NODE_ENV=test nyc mocha --require ts-node/register --require test/setup.test.js --recursive src/**/*.test.ts"
  },
  "dependencies": {
    "dotenv": "^7.0.0",
    "js-yaml": "^3.12.2",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.0",
    "@types/js-yaml": "^3.12.0",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "@types/sinon": "^7.0.10",
    "@types/sinon-chai": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.0",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  },
  "nyc": {
    "include": [
      "src/**/*.js",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.js",
      "src/**/*.d.ts",
      "src/**/*.test.ts"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
